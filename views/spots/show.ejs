<% layout('layouts/boilerplate') %>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="https://images.unsplash.com/photo-1523225078415-687408717027?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=745&q=80"
                    class="img-fluid" alt="">
                <div class="card">

                    <div class="card-body">
                        <h1 class="card-title">
                            <%= spot.name %>
                        </h1>
                        <i class="bi bi-geo-alt text-muted"></i>
                        <a href="geo:51.498169,-0.049067" class=" text-muted">
                            <%= spot.location %>
                        </a>
                        <p class="card-text">
                            <%= spot.details %>
                        </p>
                    </div>
                    <div class="card-body row">
                        <div class="d-grid gap-3 col-sm-6 mx-auto mb-3">
                            <a href="/spots/<%= spot._id %>/edit" class="btn btn-info"><i class="bi bi-pencil"></i>
                                Edit</a>
                            <a href="/spots/<%= spot._id %>?_method=DELETE" class="btn btn-danger"><i
                                    class="bi bi-trash"></i> Delete</a>
                        </div>
                        <div class="d-grid gap-3 col-sm-6 mx-auto mb-3">
                            <a href="#" class="btn btn-warning"><i class="bi bi-star"></i> Review</a>
                            <a href="/events/new" class="btn btn-primary"><i class="bi bi-calendar2-plus"></i> Event</a>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-6">
                
                <form action="/events/<%= spot._id %>" method="POST">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1"><i class="bi bi-calendar2-event"></i></span>
                        <input id="day" name="event[day]" type="number" class="form-control" placeholder="dd" aria-label="Day"
                            aria-describedby="basic-addon1" min=1 max=31 step=1 maxlength="2" required>
                        <input id="month" name="event[month]" type="number" class="form-control" placeholder="mm" aria-label="Month" min=1
                            max=12 step=1 maxlength=2 required>
                        <input id="year" name="event[year]" type="number" class="form-control" placeholder="yyyy" aria-label="Year" min=2021
                            max=3000>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

                <% for (event of spot.events) { %>
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- Calendar illustration -->
                                    <div class="cal-frame">
                                        <div class="date-frame">
                                            <span>
                                                <%= event.date.getDate() %>
                                            </span>
                                        </div>
                                        <div class="month-frame">
                                            <span>
                                                <%= monthArray[event.date.getMonth()] %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <p class="card-title"></p>
                                    <p class="h4 mb-0">Here is a Title</p>
                                    <span class="text-muted">
                                        <%= event.author %>
                                    </span>
                                    </p>

                                    <p class="card-text">
                                        Details:
                                        <%= event.date %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>

            </div>
        </div>
    </div>


