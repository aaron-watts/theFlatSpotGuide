<% layout('layouts/boilerplate') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h1>Spot Guide</h1>
            </div>
            <div class="col-lg-6 overflow-scroll limit-height" id="show-spots">
                <% for (let spot of spots) { %>
                    <div class="card mb-3">
                        <div class="card-header">
                            <i class="bi bi-geo-alt"></i>
                            <a href="geo:51.498169,-0.049067">
                                <%= spot.location %>
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- Image -->
                                    <img src="https://images.unsplash.com/photo-1523225078415-687408717027?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=745&q=80"
                                        class="img-thumbnail" alt="">
                                </div>
                                <div class="col-sm-8">
                                    <p class="card-title"></p>
                                    <p class="h4 mb-0">
                                    <a href="/spots/<%= spot._id %>">
                                        <%= spot.name %>
                                    </a></p>
                                    <span class="text-muted">
                                        <%= spot.author %>
                                    </span>
                                    </p>

                                    <p class="card-text">
                                        <%= spot.details %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-muted d-flex">
                            <div class="col"><i class="bi bi-calendar2-week"></i> 1 Event</div>
                            <div class="col"><i class="bi bi-star"></i> 2 Reviews</div>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>