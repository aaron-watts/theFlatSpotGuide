<% layout('layouts/boilerplate') %>

    <div class="event-container">
        <div class="row">
            <div class="col-lg-6 m-auto">
                <% for (event of events) { %>
                    <div class="card mb-3">
                        <div class="card-header">
                            <span class="text-muted">
                                <i class="bi bi-geo-alt">
                                </i>
                                <a class="text-muted" href="/spots/<%= event.spot._id %>">
                                    <%= event.spot.name %>
                                </a>
                                <%= event.spot.location %>
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- Calendar illustration -->
                                    <div class="cal-frame mx-auto">
                                        <div class="date-frame">
                                            <span>
                                                <%= event.date.getDate() %>
                                            </span>
                                        </div>
                                        <div class="month-frame">
                                            <span>
                                                <%= monthArray[event.date.getMonth()] %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <p class="card-title"></p>
                                    <p class="h4 mb-0">
                                        <%= event.title %>
                                    </p>
                                    <p class="text-muted"><i class="bi bi-pin-angle"></i> Pinned by <%= event.author.username %>
                                    </p>

                                    <p>
                                        <%= event.rsvps[0]._id %>
                                            <br>
                                            <%= currentUser._id %>
                                                <br>
                                                <%= event.rsvps.some(i=> i.equals(currentUser._id)) %>
                                    </p>

                                    <p class="card-text">
                                        <%= event.description %>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <% if (currentUser && event.author.equals(currentUser._id)) { %>
                            <div class="card-body row">
                                <div class="d-grid gap-3 col-sm-6 mx-auto mb-3">
                                    <a href="/spots/<%= event._id %>/edit" class="btn btn-info"><i
                                            class="bi bi-pencil"></i>
                                        Edit</a>
                                </div>
                                <div class="d-grid gap-3 col-sm-6 mx-auto mb-3">
                                    <a href="/spots/<%= event._id %>?_method=DELETE" class="btn btn-danger"><i
                                            class="bi bi-trash"></i> Delete Event</a>
                                </div>

                            </div>
                            <% } %>

                                <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                                    <div class="py-1"><%= event.rsvps.length %> interested
                                    </div>
                                    <div id="rsvp<%= event._id %>" class="">
                                        <% if (currentUser) { %>
                                            <button id=<%=event._id %> class="rsvp btn btn-sm btn-secondary"><i
                                                    class="bi bi-bookmark-fill"></i>
                                                RSVP</button>


                                            <% } %>
                                    </div>
                                </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>

    <script src="/javascript/axios.js"></script>
    <script>
        const rsvpButtons = document.querySelectorAll('button.rsvp');

        for (let button of rsvpButtons) {
            button.addEventListener('click', async function () {
                // console.log(this.id)
                const removeButton = function (btn) {
                    const div = btn.parentElement;
                    console.log(div)
                    const badge = document.createElement('SPAN');
                    const content = document.createElement('I');
                    content.classList.add('bi', 'bi-bookmark-fill', 'py-0');
                    badge.appendChild(content);
                    badge.classList.add('badge', 'bg-success', 'fs-6');
                    btn.remove();
                    div.appendChild(badge);
                }
                const res = await axios.put(`/events/${this.id}`)
                    .then(removeButton(this))
            })
        }

        //console.log(rsvpButtons[0].id)
    </script>